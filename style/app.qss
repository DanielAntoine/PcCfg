/*
    Modern Dark Theme for Qt Applications
    Provides a clean look reminiscent of AAA desktop apps.
    Author: OpenAI ChatGPT
    Last updated: 2024-05-31
*/

/* Global defaults */
* {
    background-repeat: no-repeat;
    color: #E0E0E0;
    selection-background-color: #1e1e1e;
    selection-color: #ffffff;
}

/* Base application palette */
QMainWindow, QWidget {
    background-color: #1e1e1e;
}



QDialog, QFrame, QGroupBox {
    background-color: #1e1e1e;
    border: 1px solid #272727;
    border-radius: 7px;
}
QGroupBox {

    border-radius: 8px;
    padding: 16px 12px 12px 12px;
    font-weight: 600;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    left: 10px;
    padding: 0 6px;


}
QMenuBar {
    background-color: #2a2a2a;
    color: #E0E0E0;
}
QMenuBar::item:selected {
    background: #385b7e;
}

QMenu {
    background-color: #2a2a2a;
    border: 1px solid #1e1e1e;
}
QMenu::item:selected {
    background: #385b7e;
    color: #ffffff;
}

QStatusBar {
    background-color: #1c1c1c;
    color: #aaaaaa;
}

/* Buttons */
QPushButton, QToolButton {
    background-color: #2a2a2a;
    border: 1px solid #242424;
    border-radius: 7px;
    padding: 6px 12px;
}
QPushButton:hover, QToolButton:hover {
    background-color: #242424;
}
QPushButton:pressed, QToolButton:pressed {
    background-color: #385b7e;
    border-color: #385b7e;
    color: #ffffff;
}
QPushButton:disabled, QToolButton:disabled {
    background-color: #2a2a2a;
    border-color: #242424;
    color: #555555;
}

/* Line edits and text fields */
QLineEdit, QTextEdit, QPlainTextEdit, QSpinBox, QDoubleSpinBox,
QComboBox, QDateEdit, QDateTimeEdit, QTimeEdit {
    background-color: #1a1a1a;
    border: 1px solid #242424;
    border-radius: 4px;
    padding: 4px;
    color: #E0E0E0;
    selection-background-color: #385b7e;
}

QPlainTextEdit {
    font-family: "Consolas";
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus,
QSpinBox:focus, QDoubleSpinBox:focus, QComboBox:focus,
QDateEdit:focus, QDateTimeEdit:focus, QTimeEdit:focus {
    border: 1px solid #385b7e;
}

/* Combo boxes */
QComboBox QAbstractItemView {
    background-color: #1a1a1a;
    border: 1px solid #242424;
    selection-background-color: #385b7e;
    selection-color: #ffffff;
}
QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 20px;
    border-left: 1px solid #242424;
    background-color: #2a2a2a;
}
QComboBox::down-arrow {
    image: url(style/arrow_down_light.svg);
    width: 12px;
    height: 8px;
}
QComboBox:disabled {
    background-color: #2a2a2a;
    border: 1px solid #242424;
    color: #555555;
}
QComboBox::drop-down:disabled {
    background-color: #2a2a2a;
    border-left: 1px solid #242424;
}
QComboBox::down-arrow:disabled {
    image: url(style/arrow_down_disabled.svg);
    width: 12px;
    height: 8px;
}

/* Tabs */
QTabWidget::pane {
    border: 1px solid #1e1e1e;
    background: #1a1a1a;
}
QTabBar::tab {
    background: #1c1c1c;
    border: 1px solid #1e1e1e;
    border-bottom: none;
    padding: 8px 12px;
    margin-right: 2px;
}
QTabBar::tab:selected {
    background: #2a2a2a;
    color: #ffffff;
}

/* Tooltips */
QToolTip {
    color: #ffffff;
    background-color: #262626;
    border: none;
    padding: 6px;
    border-radius: 7px;
}

/* Scroll bars */
QScrollBar:vertical {
    background: #1a1a1a;
    width: 10px;
    margin: 0px;
}
QScrollBar::handle:vertical {
    background: #385b7e;
    min-height: 20px;
    border-radius: 7px;
}
QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    background: none;
    border: none;
}
QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {
    background: #1a1a1a;
    height: 10px;
    margin: 0px;
}
QScrollBar::handle:horizontal {
    background: #385b7e;
    min-width: 20px;
    border-radius: 7px;
}
QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    background: none;
    border: none;
}
QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: none;
}

/* Progress bars */
QProgressBar {
    background-color: #1a1a1a;
    border: 1px solid #242424;
    border-radius: 7px;
    text-align: center;
    color: #E0E0E0;
}
QProgressBar::chunk {
    background-color: #385b7e;
    border-radius: 7px;
}

/* Tables and trees */
QTableView, QTreeView, QListView, QTreeWidget, QTableWidget {
    background-color: #1a1a1a;
    alternate-background-color: #1f1f1f;
    border: 1px solid #1e1e1e;
    gridline-color: #1e1e1e;
}

QTreeWidget#installationChecklistTree {
    font-size: 13px;
}

QTreeWidget#installationChecklistTree::item {
    min-height: 24px;
}

QTreeWidget#installationChecklistTree::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #3a3a3a;
    border-radius: 7px;
    background: #1e1e1e;
}

QTreeWidget#installationChecklistTree::indicator:checked {
    background: #385b7e;
    border-color: #385b7e;
}

QTreeWidget#installationChecklistTree::indicator:unchecked {
    background: #1e1e1e;
    border-color: #3a3a3a;
}

QHeaderView::section {
    background-color: #2a2a2a;
    color: #E0E0E0;
    padding: 4px;
    border: none;
}

/* Check boxes and radio buttons */
QCheckBox, QRadioButton {
    padding: 2px;

}
QCheckBox::indicator, QRadioButton::indicator {
    width: 14px;
    height: 14px;
    border: 1px solid #3a3a3a;
    border-radius: 7px;
    background: #1e1e1e;
}
QCheckBox::indicator:checked,
QRadioButton::indicator:checked {
    background: #385b7e;
    border-color: #385b7e;

}
QCheckBox::indicator:disabled,
QRadioButton::indicator:disabled {
    background: #1e1e1e;
    border-color: #3a3a3a;
}

/* Slider */
QSlider::groove:horizontal {
    background: #1e1e1e;
    height: 6px;
    border-radius: 3px;
}
QSlider::handle:horizontal {
    background: #385b7e;
    width: 14px;
    height: 14px;
    margin: -4px 0;
    border-radius: 7px;
}
QSlider::groove:vertical {
    background: #1e1e1e;
    width: 6px;
    border-radius: 3px;
}
QSlider::handle:vertical {
    background: #385b7e;
    width: 14px;
    height: 14px;
    margin: 0 -4px;
    border-radius: 7px;
}

/* Splitters */
QSplitter::handle {
    background-color: #2a2a2a;
}
QSplitter::handle:hover {
    background-color: #385b7e;
}

/* Links */
QLabel {
    color: #E0E0E0;
    border: none;
    background: transparent;
}
QLabel[link="true"], QLabel[link="true"]:hover {
    color: #385b7e;
}
